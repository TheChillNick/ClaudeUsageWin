<Window x:Class="ClaudeUsageWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="340"
        SizeToContent="Height"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="CanResizeWithGrip"
        MinWidth="260" MinHeight="200"
        MaxWidth="500"
        Deactivated="Window_Deactivated">

    <Border Background="#2B2B2B" CornerRadius="12" Padding="16,14,16,12"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.6" BlurRadius="24" ShadowDepth="4"/>
        </Border.Effect>

        <StackPanel>

            <!-- ── Header ── -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Claude Usage"
                           FontSize="15" FontWeight="Bold" Foreground="White"
                           VerticalAlignment="Center"/>

                <!-- Used/Remaining toggle -->
                <Button x:Name="ToggleModeBtn" Grid.Column="1" Content="Used"
                        FontSize="10" Cursor="Hand" Margin="8,0,0,0"
                        VerticalAlignment="Center" Click="ToggleModeBtn_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg" Background="#3D3D3D" CornerRadius="6" Padding="6,2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#505050"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Foreground>
                        <SolidColorBrush Color="#9E9E9E"/>
                    </Button.Foreground>
                </Button>

                <!-- Plan badge (Pro=gold, Max=royal red) — updated in code-behind -->
                <Border Grid.Column="2" x:Name="PlanBorder"
                        Background="#C17A3A" CornerRadius="8" Padding="10,3"
                        HorizontalAlignment="Right" Margin="0,0,4,0"
                        VerticalAlignment="Center">
                    <Border.RenderTransformOrigin>0.5,0.5</Border.RenderTransformOrigin>
                    <Border.RenderTransform>
                        <ScaleTransform x:Name="PlanScale"/>
                    </Border.RenderTransform>
                    <TextBlock x:Name="PlanText" Text="Pro"
                               FontSize="11" FontWeight="Bold" Foreground="White"/>
                </Border>

                <!-- Pin/Unpin -->
                <Button x:Name="PinBtn" Grid.Column="3" Content="&#x1F4CC;"
                        FontSize="11" Cursor="Hand" Width="22" Height="22" Margin="4,0,0,0"
                        Click="PinBtn_Click" VerticalAlignment="Center"
                        ToolTip="Pin window (stay visible)">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg" Background="#3D3D3D" CornerRadius="6" Padding="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#505050"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Foreground>
                        <SolidColorBrush Color="#9E9E9E"/>
                    </Button.Foreground>
                </Button>

                <!-- Close -->
                <Button x:Name="ClosePopupBtn" Grid.Column="4" Content="&#x2715;"
                        FontSize="11" Cursor="Hand" Width="22" Height="22" Margin="4,0,0,0"
                        Click="ClosePopupBtn_Click" VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg" Background="#3D3D3D" CornerRadius="6" Padding="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#7B1F1F"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Foreground>
                        <SolidColorBrush Color="#9E9E9E"/>
                    </Button.Foreground>
                </Button>

            </Grid>

            <Rectangle Height="1" Fill="#3D3D3D" Margin="0,0,0,10"/>

            <!-- ── Error Banner ── -->
            <Border x:Name="ErrorBanner" Background="#7B1F1F" CornerRadius="6" Padding="10,6"
                    Margin="0,0,0,8" Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="ErrorText" Grid.Column="0"
                               Text="Could not fetch usage data"
                               Foreground="#FF8A8A" FontSize="11" TextWrapping="Wrap"
                               VerticalAlignment="Center"/>
                    <Button x:Name="RetryBtn" Grid.Column="1" Content="Retry"
                            Margin="8,0,0,0" FontSize="11" Cursor="Hand" Click="RetryBtn_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bg" Background="#3D3D3D" CornerRadius="6" Padding="6,2">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bg" Property="Background" Value="#505050"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Foreground>
                            <SolidColorBrush Color="#9E9E9E"/>
                        </Button.Foreground>
                    </Button>
                </Grid>
            </Border>

            <!-- ── Local-data notice (shown when API unavailable) ── -->
            <Border x:Name="LocalDataBanner" Background="#1A2E1A" CornerRadius="6" Padding="10,5"
                    Margin="0,0,0,8" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#x1F4C2;" FontSize="11" Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Showing local Claude Code session data  ·  API unavailable"
                               Foreground="#6FCF6F" FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- ── 5-Hour Window ── -->
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="FiveHourIcon" Text="&#x1F550;" FontSize="12"
                               Foreground="#9E9E9E" Margin="0,0,6,0"/>
                    <TextBlock x:Name="FiveHourLabel" Text="5-Hour Window"
                               FontSize="12" Foreground="#9E9E9E"/>
                </StackPanel>
                <TextBlock x:Name="FiveHourPctText" Grid.Column="1"
                           Text="0%" FontSize="13" FontWeight="Bold" Foreground="White"/>
            </Grid>

            <Grid x:Name="FiveHourBarGrid" Height="8" Margin="0,0,0,4">
                <Rectangle Fill="#3D3D3D" RadiusX="4" RadiusY="4"/>
                <Rectangle x:Name="FiveHourBarFill" Fill="#4CAF50" RadiusX="4" RadiusY="4"
                           HorizontalAlignment="Left" Width="0"/>
            </Grid>
            <TextBlock x:Name="FiveHourResetText" Text="Resets in --"
                       FontSize="11" Foreground="#9E9E9E" Margin="0,0,0,10"/>

            <Rectangle Height="1" Fill="#3D3D3D" Margin="0,0,0,10"/>

            <!-- Sparkline: usage history -->
            <Canvas x:Name="SparklineCanvas" Height="30" Margin="0,0,0,8">
                <Canvas.Background>
                    <SolidColorBrush Color="Transparent"/>
                </Canvas.Background>
            </Canvas>

            <!-- ── Weekly ── -->
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="&#x1F4C5;" FontSize="12" Foreground="#9E9E9E" Margin="0,0,6,0"/>
                    <TextBlock x:Name="WeeklyLabel" Text="Weekly" FontSize="12" Foreground="#9E9E9E"/>
                </StackPanel>
                <TextBlock x:Name="WeeklyPctText" Grid.Column="1"
                           Text="0%" FontSize="13" FontWeight="Bold" Foreground="White"/>
            </Grid>

            <Grid x:Name="WeeklyBarGrid" Height="8" Margin="0,0,0,4">
                <Rectangle Fill="#3D3D3D" RadiusX="4" RadiusY="4"/>
                <Rectangle x:Name="WeeklyBarFill" Fill="#4CAF50" RadiusX="4" RadiusY="4"
                           HorizontalAlignment="Left" Width="0"/>
            </Grid>
            <TextBlock x:Name="WeeklyResetText" Text="Resets --"
                       FontSize="11" Foreground="#9E9E9E" Margin="0,0,0,10"/>

            <Rectangle Height="1" Fill="#3D3D3D" Margin="0,0,0,10"/>

            <!-- ── Today ── -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="&#x1F4C6;" FontSize="13" Foreground="White" Margin="0,0,6,0"/>
                <TextBlock Text="Today" FontSize="13" FontWeight="Bold" Foreground="White"/>
            </StackPanel>

            <Grid Margin="0,0,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Messages:" FontSize="12" Foreground="#9E9E9E"/>
                <TextBlock x:Name="MessagesText" Grid.Column="1" Text="0"
                           FontSize="12" Foreground="White"/>
            </Grid>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Tokens:" FontSize="12" Foreground="#9E9E9E"/>
                <TextBlock x:Name="TokensText" Grid.Column="1" Text="0"
                           FontSize="12" Foreground="White"/>
            </Grid>

            <Rectangle Height="1" Fill="#3D3D3D" Margin="0,0,0,8"/>

            <!-- ── Footer: timestamp + refresh ── -->
            <Grid Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="UpdatedText" Grid.Column="0" Text="Updated --"
                           FontSize="11" Foreground="#9E9E9E" VerticalAlignment="Center"/>

                <!-- Refresh button with spin-animation transform -->
                <Button x:Name="RefreshBtn" Grid.Column="1"
                        Content="&#x21BA;" Width="28" Height="28" FontSize="15"
                        Cursor="Hand" Click="RefreshBtn_Click"
                        RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <RotateTransform x:Name="RefreshTransform" Angle="0"/>
                    </Button.RenderTransform>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg" Background="#3D3D3D" CornerRadius="14">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#505050"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="bg" Property="Opacity" Value="0.4"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Foreground>
                        <SolidColorBrush Color="White"/>
                    </Button.Foreground>
                </Button>
            </Grid>

            <!-- ── Footer: Settings + claude.ai + Quit ── -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Settings" HorizontalAlignment="Left"
                        FontSize="12" Cursor="Hand" Click="SettingsBtn_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"      Value="Transparent"/>
                            <Setter Property="Foreground"      Value="#9E9E9E"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding"         Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <TextBlock x:Name="t"
                                                   Text="{TemplateBinding Content}"
                                                   Foreground="{TemplateBinding Foreground}"
                                                   FontSize="{TemplateBinding FontSize}"/>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="t" Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="1" Content="claude.ai &#x2197;" HorizontalAlignment="Center"
                        FontSize="11" Cursor="Hand" Click="OpenClaudeBtn_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"      Value="Transparent"/>
                            <Setter Property="Foreground"      Value="#9E9E9E"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding"         Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <TextBlock x:Name="t"
                                                   Text="{TemplateBinding Content}"
                                                   Foreground="{TemplateBinding Foreground}"
                                                   FontSize="{TemplateBinding FontSize}"/>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="t" Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="2" Content="Quit"
                        FontSize="12" Cursor="Hand" Click="QuitBtn_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"      Value="Transparent"/>
                            <Setter Property="Foreground"      Value="#9E9E9E"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding"         Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <TextBlock x:Name="t"
                                                   Text="{TemplateBinding Content}"
                                                   Foreground="{TemplateBinding Foreground}"
                                                   FontSize="{TemplateBinding FontSize}"/>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="t" Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

        </StackPanel>
    </Border>
</Window>
