<Window x:Class="ClaudeUsageWin.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claude Usage – Settings"
        Width="460" Height="560"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        MinWidth="380" MinHeight="440"
        MaxWidth="800" MaxHeight="900"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        SizeToContent="Manual">

    <Window.Resources>

        <!-- ── Field (TextBox) ── -->
        <Style x:Key="Field" TargetType="TextBox">
            <Setter Property="Background"      Value="#1A1A1A"/>
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="CaretBrush"      Value="White"/>
            <Setter Property="SelectionBrush"  Value="#4CAF50"/>
            <Setter Property="BorderBrush"     Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding"         Value="10,7"/>
            <Setter Property="FontSize"        Value="13"/>
            <Setter Property="Height"          Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- ── Small label ── -->
        <Style x:Key="Label" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#7A7A7A"/>
            <Setter Property="FontSize"   Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin"     Value="0,0,0,5"/>
        </Style>

        <!-- ── Buttons ── -->
        <Style x:Key="Btn" TargetType="Button">
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding"         Value="14,8"/>
            <Setter Property="FontSize"        Value="13"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bg" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallBtn" TargetType="Button" BasedOn="{StaticResource Btn}">
            <Setter Property="Padding"   Value="10,6"/>
            <Setter Property="FontSize"  Value="12"/>
        </Style>

        <Style x:Key="CloseBtn" TargetType="Button">
            <Setter Property="Foreground"      Value="#9E9E9E"/>
            <Setter Property="Background"      Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width"           Value="32"/>
            <Setter Property="Height"          Value="32"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="Transparent" CornerRadius="6">
                            <TextBlock Text="&#x2715;" FontSize="13"
                                       Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#7B1F1F"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── Eye (icon-only) button ── -->
        <Style x:Key="EyeBtn" TargetType="Button">
            <Setter Property="Foreground"      Value="#9E9E9E"/>
            <Setter Property="Background"      Value="#2A2A2A"/>
            <Setter Property="BorderBrush"     Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width"           Value="36"/>
            <Setter Property="Height"          Value="36"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="FontSize"        Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── CheckBox ── -->
        <Style x:Key="DarkCheck" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize"   Value="13"/>
            <Setter Property="Margin"     Value="0,0,0,10"/>
            <Setter Property="Cursor"     Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="box" Width="18" Height="18" CornerRadius="4"
                                    BorderThickness="1" BorderBrush="#555"
                                    Background="#2A2A2A" Margin="0,0,9,0">
                                <TextBlock x:Name="chk" Text="&#x2713;" FontSize="11" FontWeight="Bold"
                                           Foreground="#4CAF50" HorizontalAlignment="Center"
                                           VerticalAlignment="Center" Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="chk" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="box" Property="BorderBrush" Value="#4CAF50"/>
                                <Setter TargetName="box" Property="Background" Value="#1A2E1A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="box" Property="BorderBrush" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── RadioButton ── -->
        <Style x:Key="DarkRadio" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize"   Value="13"/>
            <Setter Property="Margin"     Value="0,0,16,0"/>
            <Setter Property="Cursor"     Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="ring" Width="18" Height="18" CornerRadius="9"
                                    BorderThickness="1" BorderBrush="#555"
                                    Background="#2A2A2A" Margin="0,0,9,0">
                                <Ellipse x:Name="dot" Width="8" Height="8" Fill="#4CAF50"
                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                         Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="dot"  Property="Visibility"  Value="Visible"/>
                                <Setter TargetName="ring" Property="BorderBrush" Value="#4CAF50"/>
                                <Setter TargetName="ring" Property="Background"  Value="#1A2E1A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ring" Property="BorderBrush" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── ComboBox Items ── -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize"   Value="13"/>
            <Setter Property="Padding"    Value="10,7"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#3D3D3D"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#1A2E1A"/>
                    <Setter Property="Foreground" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ── ComboBox ── -->
        <Style TargetType="ComboBox">
            <Setter Property="Background"      Value="#1A1A1A"/>
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="BorderBrush"     Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize"        Value="13"/>
            <Setter Property="Height"          Value="36"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="bg"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"/>
                            <ContentPresenter x:Name="display"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="10,0,34,0"
                                              VerticalAlignment="Center"
                                              IsHitTestVisible="False"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"/>
                            <ToggleButton IsChecked="{Binding IsDropDownOpen, Mode=TwoWay,
                                          RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="Transparent" BorderThickness="0"
                                          Focusable="False" ClickMode="Press"
                                          HorizontalAlignment="Stretch">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent"/>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Path Data="M 0 0 L 6 6 L 12 0" Stroke="#9E9E9E" StrokeThickness="1.5"
                                  HorizontalAlignment="Right" VerticalAlignment="Center"
                                  Margin="0,0,12,0" IsHitTestVisible="False"/>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False"
                                   PopupAnimation="Fade" Placement="Bottom"
                                   PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                                <Border Background="#1A1A1A" BorderBrush="#444444" BorderThickness="1"
                                        CornerRadius="4" Margin="0,2,0,0"
                                        MinWidth="{Binding ActualWidth,
                                                  RelativeSource={RelativeSource AncestorType=ComboBox}}">
                                    <ScrollViewer MaxHeight="180" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="BorderBrush" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── Slider ── -->
        <Style TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Style="{x:Null}">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="4" CornerRadius="2" Background="#4CAF50"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" Style="{x:Null}">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="4" CornerRadius="2" Background="#333333"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Cursor="Hand">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="16" Height="16" Fill="#4CAF50">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect Color="Black" Opacity="0.4"
                                                                          BlurRadius="4" ShadowDepth="1"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── TabControl ── -->
        <Style TargetType="TabControl">
            <Setter Property="Background"      Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding"         Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" BorderBrush="#333333" BorderThickness="0,0,0,1">
                                <TabPanel IsItemsHost="True" Background="Transparent"/>
                            </Border>
                            <ContentPresenter Grid.Row="1" ContentSource="SelectedContent"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── TabItem ── -->
        <Style TargetType="TabItem">
            <Setter Property="Background"      Value="Transparent"/>
            <Setter Property="Foreground"      Value="#9E9E9E"/>
            <Setter Property="FontSize"        Value="12"/>
            <Setter Property="Padding"         Value="18,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="tab" Background="Transparent"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0,0,0,2" BorderBrush="Transparent">
                            <TextBlock x:Name="txt" Text="{TemplateBinding Header}"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="Medium"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="txt" Property="Foreground" Value="White"/>
                                <Setter TargetName="tab" Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="tab" Property="Background" Value="#2E2E2E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── ScrollBar ── -->
        <Style TargetType="ScrollBar">
            <Setter Property="Width"      Value="6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="Transparent" CornerRadius="3"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Opacity="0"
                                                  Style="{x:Null}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Opacity="0"
                                                  Style="{x:Null}"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{x:Null}">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#555" CornerRadius="3" Margin="1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- ── Main Container ── -->
    <Border Background="#252525" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.55" BlurRadius="28" ShadowDepth="5"/>
        </Border.Effect>

        <Grid x:Name="ContentGrid">
            <Grid.LayoutTransform>
                <ScaleTransform x:Name="SettingsScaleTransform" ScaleX="1" ScaleY="1"/>
            </Grid.LayoutTransform>
            <Grid.RowDefinitions>
                <RowDefinition Height="46"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- ── Title Bar ── -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0" Background="#1E1E1E"
                    PreviewMouseDown="TitleBar_PreviewMouseDown">
                <Grid Margin="18,0,10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Ellipse Grid.Column="0" Width="8" Height="8" Fill="#4CAF50"
                             VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" Text="Settings"
                               FontSize="14" FontWeight="SemiBold" Foreground="White"
                               VerticalAlignment="Center"/>
                    <Button Grid.Column="2" Style="{StaticResource CloseBtn}"
                            Click="CancelBtn_Click" ToolTip="Close"/>
                </Grid>
            </Border>

            <!-- ── Tabs ── -->
            <TabControl x:Name="MainTabs" Grid.Row="1">

                <!-- ═══════════════ Authentication ═══════════════ -->
                <TabItem Header="Authentication">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="22,18,22,18">

                            <!-- Auto-auth status card -->
                            <Border x:Name="AutoAuthBorder" CornerRadius="8"
                                    Padding="14,12" Margin="0,0,0,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock x:Name="AutoAuthTitle"
                                                   FontSize="13" FontWeight="SemiBold"/>
                                        <TextBlock x:Name="AutoAuthSub"
                                                   FontSize="11" Foreground="#9E9E9E"
                                                   Margin="0,3,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <TextBlock x:Name="AutoAuthBadge" Grid.Column="1"
                                               FontSize="22" VerticalAlignment="Center"
                                               Margin="12,0,0,0"/>
                                </Grid>
                            </Border>

                            <!-- Auth mode -->
                            <TextBlock Text="AUTH MODE" Style="{StaticResource Label}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <RadioButton x:Name="AutoAuthRadio" Content="Claude Code (Auto)"
                                             Style="{StaticResource DarkRadio}"
                                             Checked="AuthRadio_Checked"/>
                                <RadioButton x:Name="ManualAuthRadio" Content="Manual session key"
                                             Style="{StaticResource DarkRadio}"
                                             Checked="AuthRadio_Checked"/>
                            </StackPanel>

                            <!-- Manual key panel -->
                            <StackPanel x:Name="ManualKeyPanel">
                                <TextBlock Style="{StaticResource Label}">
                                    SESSION KEY <Run Foreground="#555" Text="(from claude.ai cookie)"/>
                                </TextBlock>

                                <!-- Session key field with eye toggle -->
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="6"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Hidden password (default) -->
                                    <PasswordBox x:Name="SessionKeyBox" Grid.Column="0"
                                                 Background="#1A1A1A" Foreground="White"
                                                 CaretBrush="White" SelectionBrush="#4CAF50"
                                                 BorderBrush="#444444" BorderThickness="1"
                                                 Padding="10,7" FontSize="13" Height="36"
                                                 PasswordChanged="SessionKeyBox_Changed"/>

                                    <!-- Visible text (shown when eye is pressed) -->
                                    <TextBox x:Name="SessionKeyText" Grid.Column="0"
                                             Style="{StaticResource Field}"
                                             Visibility="Collapsed"
                                             TextChanged="SessionKeyText_Changed"/>

                                    <!-- Eye toggle button -->
                                    <Button x:Name="EyeToggleBtn" Grid.Column="2"
                                            Content="&#x1F441;" Style="{StaticResource EyeBtn}"
                                            Click="EyeToggleBtn_Click"
                                            ToolTip="Show / hide session key"/>
                                </Grid>

                                <!-- Session key info (length, truncated preview) -->
                                <TextBlock x:Name="KeyInfoText" FontSize="10" Foreground="#555"
                                           Margin="0,2,0,16" Text=""/>
                            </StackPanel>

                            <!-- Org ID -->
                            <TextBlock Text="ORGANIZATION ID" Style="{StaticResource Label}"/>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="OrgIdBox" Grid.Column="0"
                                         Style="{StaticResource Field}"
                                         ToolTip="Leave blank to auto-detect"/>
                                <Button x:Name="DetectBtn" Grid.Column="2"
                                        Content="Auto-detect"
                                        Background="#3D3D3D" Style="{StaticResource SmallBtn}"
                                        Click="DetectBtn_Click"/>
                            </Grid>

                            <!-- Refresh interval -->
                            <TextBlock Text="REFRESH INTERVAL" Style="{StaticResource Label}"/>
                            <ComboBox x:Name="IntervalCombo" Margin="0,0,0,4">
                                <ComboBoxItem Tag="30">30 seconds</ComboBoxItem>
                                <ComboBoxItem Tag="60">1 minute</ComboBoxItem>
                                <ComboBoxItem Tag="120">2 minutes</ComboBoxItem>
                                <ComboBoxItem Tag="300">5 minutes</ComboBoxItem>
                            </ComboBox>

                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- ═══════════════ Appearance ═══════════════ -->
                <TabItem Header="Appearance">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="22,18,22,18">

                            <TextBlock Text="WINDOW OPACITY" Style="{StaticResource Label}"/>
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="OpacitySlider" Grid.Column="0"
                                        Minimum="20" Maximum="100"
                                        IsSnapToTickEnabled="True" TickFrequency="5"
                                        VerticalAlignment="Center"
                                        ValueChanged="OpacitySlider_ValueChanged"/>
                                <TextBlock x:Name="OpacityValueText" Grid.Column="1"
                                           Text="95%" Foreground="White" FontSize="13"
                                           VerticalAlignment="Center"
                                           Margin="14,0,0,0" MinWidth="38"/>
                            </Grid>

                            <CheckBox x:Name="AlwaysOnTopCheck"
                                      Content="Keep window always on top"
                                      Style="{StaticResource DarkCheck}" Margin="0,0,0,20"/>

                            <TextBlock Text="UI SCALE" Style="{StaticResource Label}"/>
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="ScaleSlider" Grid.Column="0"
                                        Minimum="75" Maximum="150"
                                        IsSnapToTickEnabled="True" TickFrequency="5"
                                        VerticalAlignment="Center"
                                        ValueChanged="ScaleSlider_ValueChanged"/>
                                <TextBlock x:Name="ScaleValueText" Grid.Column="1"
                                           Text="100%" Foreground="White" FontSize="13"
                                           VerticalAlignment="Center"
                                           Margin="14,0,0,0" MinWidth="42"/>
                            </Grid>

                            <TextBlock Text="TRAY ICON STYLE" Style="{StaticResource Label}"/>
                            <TextBlock Text="Choose how the usage percentage appears in your system tray."
                                       FontSize="11" Foreground="#666666" Margin="0,0,0,8"/>
                            <ComboBox x:Name="IconStyleCombo" Margin="0,0,0,4">
                                <ComboBoxItem Tag="Percentage">Percentage  (e.g. 42%)</ComboBoxItem>
                                <ComboBoxItem Tag="Bar">Bar  (e.g. ▓▓▓▓░░░░░░)</ComboBoxItem>
                                <ComboBoxItem Tag="Dot">Dot  (colored circle)</ComboBoxItem>
                            </ComboBox>

                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- ═══════════════ Notifications ═══════════════ -->
                <TabItem Header="Notifications">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="22,18,22,18">

                            <TextBlock Text="ALERT TRIGGERS" Style="{StaticResource Label}"/>
                            <CheckBox x:Name="NotifyFiveHourCheck"
                                      Content="5-Hour Window alerts"
                                      Style="{StaticResource DarkCheck}"/>
                            <CheckBox x:Name="NotifyWeeklyCheck"
                                      Content="Weekly usage alerts"
                                      Style="{StaticResource DarkCheck}" Margin="0,0,0,20"/>

                            <TextBlock Text="THRESHOLD LEVELS (%)" Style="{StaticResource Label}"/>
                            <TextBlock Text="Receive a notification when usage crosses any of these levels."
                                       FontSize="11" Foreground="#666666" TextWrapping="Wrap"
                                       Margin="0,0,0,10"/>
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Warning" Style="{StaticResource Label}"
                                               HorizontalAlignment="Center"/>
                                    <TextBox x:Name="Threshold1Box" Style="{StaticResource Field}"
                                             Text="75" TextAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Alert" Style="{StaticResource Label}"
                                               HorizontalAlignment="Center"/>
                                    <TextBox x:Name="Threshold2Box" Style="{StaticResource Field}"
                                             Text="90" TextAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Critical" Style="{StaticResource Label}"
                                               HorizontalAlignment="Center"/>
                                    <TextBox x:Name="Threshold3Box" Style="{StaticResource Field}"
                                             Text="95" TextAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- ═══════════════ Behavior ═══════════════ -->
                <TabItem Header="Behavior">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="22,18,22,18">

                            <TextBlock Text="SYSTEM" Style="{StaticResource Label}"/>
                            <CheckBox x:Name="LaunchAtStartupCheck"
                                      Content="Launch at Windows startup"
                                      Style="{StaticResource DarkCheck}" Margin="0,0,0,24"/>

                            <!-- Statusline -->
                            <TextBlock Text="CLAUDE CODE STATUSLINE" Style="{StaticResource Label}"/>
                            <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#AAAAAA"
                                       Margin="0,0,0,12">
                                Adds a live usage bar to the Claude Code terminal statusline,
                                powered by a small PowerShell hook.
                            </TextBlock>
                            <Border CornerRadius="6" Padding="12,8" Margin="0,0,0,12"
                                    Background="#1A1A1A">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="StatuslineStatusText"
                                               FontSize="12" Foreground="#FF8A8A"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                                <Button x:Name="StatuslineInstallBtn"
                                        Content="Install"
                                        Background="#4CAF50" FontWeight="SemiBold"
                                        Style="{StaticResource SmallBtn}"
                                        Click="StatuslineInstallBtn_Click"
                                        Margin="0,0,8,0"/>
                                <Button x:Name="StatuslineRemoveBtn"
                                        Content="Remove"
                                        Background="#3D3D3D"
                                        Style="{StaticResource SmallBtn}"
                                        Click="StatuslineRemoveBtn_Click"/>
                            </StackPanel>

                            <!-- Error logs -->
                            <TextBlock Text="DIAGNOSTICS" Style="{StaticResource Label}"/>
                            <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#AAAAAA"
                                       Margin="0,0,0,12">
                                View application logs to diagnose connection or auth issues.
                            </TextBlock>
                            <Button x:Name="ViewLogsBtn"
                                    Content="Open Logs Folder"
                                    Background="#3D3D3D" Style="{StaticResource SmallBtn}"
                                    HorizontalAlignment="Left"
                                    Click="ViewLogsBtn_Click"/>

                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

            </TabControl>

            <!-- ── Footer ── -->
            <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="0,0,12,12"
                    BorderBrush="#333333" BorderThickness="0,1,0,0">
                <Grid Margin="22,0">
                    <Button Content="Cancel"
                            HorizontalAlignment="Left" VerticalAlignment="Center"
                            Background="#3D3D3D" Style="{StaticResource Btn}"
                            Click="CancelBtn_Click"/>
                    <Button Content="Save Settings"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="#C17A3A" FontWeight="SemiBold"
                            Style="{StaticResource Btn}"
                            Click="SaveBtn_Click"/>
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>
